<Window x:Class="CodeSoft_9Codes.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeSoft_9Codes"
        mc:Ignorable="d"
        Foreground="#034E70"
        TextElement.FontWeight="Regular" 
        TextElement.FontSize="14" 
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"
        FontFamily="Courier New"
        Title="Input Password" x:Name="Passform" Height="138" Width="310" MaxHeight="138" MaxWidth="310" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,1">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                <GradientStop Color="#03405D" Offset="0"/>
                <GradientStop Color="#0AABCF" Offset="0.567"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Label Foreground="White"  Margin="0,37">
                PASSWORD :
            </Label>
        </Grid>
        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="10">
            <PasswordBox x:Name="txtPassword"  HorizontalContentAlignment="Center" 
                         Height="30" FontSize="22" KeyUp="txtPassword_KeyUp">
            </PasswordBox>
        </Grid>
    </Grid>
</Window>
