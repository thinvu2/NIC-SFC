<Window x:Class="PM.MoreForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PM"
        mc:Ignorable="d"
        FontSize="13"
        FontFamily="Arial"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Title="MoreForm" Height="450" Width="450">
    <Grid Background="#008082">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label Content="SN :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Grid>
            <Grid Grid.Column="1">
                <Label Content="MO :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="3">
            <DataGrid/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="ITEM-1 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Content="ITEM-2 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Label Content="ITEM-3 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Label Content="ITEM-4 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Label Content="ITEM-5 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="5">
                    <Label Content="ITEM-6 :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="4">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="5">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="2">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="3">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="4">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="5">
                    <Label Content="VER :" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="4">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
                <Grid Grid.Row="5">
                    <TextBox Height="25" Padding="4" Margin="5 0"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
