<Window x:Class="CQC.formPasswdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CQC"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        TextElement.FontSize="16"
        ResizeMode="NoResize"
        Title="formPasswd" Height="180" Width="310" Initialized="Window_Initialized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--input-->
        <DockPanel>

            <Label VerticalAlignment="Bottom" FontSize="12" Margin="0 0 0 10" Foreground="Red">PassWord :</Label>
            <PasswordBox
                x:Name="meditPassword"
                Margin="10 10 40 10"
                materialDesign:HintAssist.Hint="Input Password"
                Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
        </DockPanel>
        <!--confim-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel>

                <Button 
                    x:Name="bbtnOK" 
                    Margin="10" HorizontalAlignment="Right"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="90"
                    ToolTip="OK" Click="bbtnOK_Click">
                    <StackPanel
                Orientation="Horizontal">
                        <materialDesign:PackIcon
                    Margin="0 .5 0 0"
                    Kind="Check" />
                        <TextBlock>
                    OK
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button Margin="10" HorizontalAlignment="Left"
                        x:Name="bbtnCancel"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="90"
                        ToolTip="Cancel">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                        Margin="0 .5 0 0"
                        Kind="Close" />
                        <TextBlock>
                        Cancel
                        </TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
